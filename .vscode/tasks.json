{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Test business_logic (host)",
			"type": "shell",
			"command": "cargo",
			"args": ["test", "-p", "business_logic"],
			"group": "test",
			"problemMatcher": ["$rustc"]
		},
		{
			"label": "Build hardware_main (MCU)",
			"type": "shell",
			"command": "cargo",
			"args": ["build", "-p", "hardware_main", "--target", "thumbv7em-none-eabi"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$rustc"],
			"options": {
				"cwd": "${workspaceFolder}/hardware_main",
				"env": {
					"DEFMT_LOG": "trace"
				}
			}
		}
	]
}